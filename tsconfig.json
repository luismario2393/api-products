{
  "compilerOptions": {
    "outDir": "./public",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "target": "es2016"
  },
  "include": ["./src/**/*"]
}
